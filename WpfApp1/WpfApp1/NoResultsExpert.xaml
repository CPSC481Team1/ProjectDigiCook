<Page x:Class="WpfApp1.NoResultsExpert"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      Title="NoResultsExpert" Height="900" Width="1600" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="240*"/>
            <RowDefinition Height="330*"/>
            <RowDefinition Height="330*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="1360*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="219.707,46.617,220.293,46.617" Grid.Row="1" Grid.RowSpan="2" Background="Orange">
            <Button x:Name="vegan" HorizontalAlignment="Right" Width="200" BorderBrush="Silver" BorderThickness="10"  RenderTransformOrigin="0.5,0.5" Margin="0,0,353.5,34.766" MouseEnter="vegan_MouseEnter" MouseLeave="vegan_MouseLeave" Height="200" VerticalAlignment="Bottom" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="8"/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="4.2" Direction="324"/>
                </Button.Effect>
                <Grid x:Name="cat1" Height="Auto" Width="Auto">
                    <Image Source=".\Images\Categories\veganMeal.jpg" Stretch="Fill" Height="178" VerticalAlignment="Top"/>
                    <TextBlock x:Name="category1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="1" BlurRadius="20"/>
                        </TextBlock.Effect><Run FontSize="30" FontFamily="Impact" Text="Vegan" Foreground="White" /></TextBlock>
                </Grid>
            </Button>


        </Border>

        <TextBlock FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Center" Height="105.653" Margin="0" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="654.023"><Run FontSize="75" FontFamily="Segoe UI Black" Text="DigiCook" Foreground="Teal" /></TextBlock>
        <local:Button_CheckList Grid.Column="1" HorizontalAlignment="Left" Height="19" Margin="1283,18.5,0,0" VerticalAlignment="Top" Width="167.5" Grid.ColumnSpan="2"/>
        <local:SearchBar x:Name="searchBar" HorizontalAlignment="Left" Height="286.617" VerticalAlignment="Top" Width="1360" Grid.Column="1" Margin="0,0,0,-46.617"/>
        <TextBlock x:Name="textBlock" Height="60.833" Margin="219.707,-29.444,178.062,0" TextWrapping="Wrap" Text="No results found... Try searching with a new term or try a category" FontSize="30" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="Alternatives" Grid.Column="1"  Grid.Row="1" TextWrapping="Wrap" Height="102" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="401.061,48,401.061,0" d:LayoutOverrides="LeftMargin, RightMargin"><Run FontSize="75" FontFamily="Segoe UI Black" Text="You Might Like" Foreground="SteelBlue" /></TextBlock>
        <Button x:Name="vegetarian" HorizontalAlignment="Right" Width="200" Height="200" BorderBrush="Silver" BorderThickness="10"  d:LayoutOverrides="HorizontalAlignment"  RenderTransformOrigin="0.5,0.5" Grid.Column="1" Margin="0,0,319,-53.994" Grid.Row="1" VerticalAlignment="Bottom" MouseEnter="vegetarian_MouseEnter" MouseLeave="vegetarian_MouseLeave" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="8"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="4.2" Direction="324"/>
            </Button.Effect>
            <Grid x:Name="cat3" Height="Auto" Width="Auto">
                <Image Source=".\Images\Categories\Veg.jpg" Stretch="Fill" Height="178" VerticalAlignment="Top"/>
                <TextBlock x:Name="category3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="1" BlurRadius="20"/>
                    </TextBlock.Effect><Run FontSize="30" FontFamily="Impact" Text="Vegetarian" Foreground="White" /></TextBlock>
            </Grid>
        </Button>
        <Button x:Name="fettuccine" HorizontalAlignment="Right" Width="200" Height="200" BorderBrush="Silver" BorderThickness="10"  RenderTransformOrigin="0.5,0.5" Grid.Column="1" Margin="0,0,875.5,-53.994" Grid.Row="1" VerticalAlignment="Bottom" Click="fettuccine_Click" MouseEnter="fettuccine_MouseEnter" MouseLeave="fettuccine_MouseLeave" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="8"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="4.2" Direction="324"/>
            </Button.Effect>
            <Grid x:Name="cat2" Height="Auto" Width="Auto">
                <Image Source=".\Images\Search\Fett.jpg" Stretch="Fill" Height="178" VerticalAlignment="Top"/>
                <TextBlock x:Name="category2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="1" BlurRadius="20"/>
                    </TextBlock.Effect><Run FontSize="30" FontFamily="Impact" Text="Fettuccine" Foreground="White" /></TextBlock>
            </Grid>
        </Button>
    </Grid>
</Page>
