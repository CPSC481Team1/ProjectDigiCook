<Page x:Class="WpfApp1.HelperPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight ="450" d:DesignWidth ="800"
      Title="HelperPage"
      Initialized="Page_Initial"
      ShowsNavigationUI="False"
      >

    <Grid Background="Teal">
        <Grid.RowDefinitions>
            <RowDefinition Height="225*"/>

        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlock" Height="50" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment ="Center" TextWrapping="Wrap" Text="Skill Selection" FontSize="40" FontFamily="Segoe UI Black"  Foreground="DarkOrange"/>
        <TextBlock x:Name="textBlock1" Width ="800" Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Click on one of the three skill levels below or on the skip button to proceed. Clicking skip will automatically set the skill level to beginner." FontFamily="Segoe UI Black" FontSize="22" Margin="0,76,0,0" Height="70" VerticalAlignment="Top" TextAlignment="Center"/>
        <Border BorderBrush="DarkOrange" BorderThickness="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="250" Width="600">
            <Grid x:Name="skill" Height="Auto" Width="Auto">
                <Image Source=".\Images\Misc\1.png" Stretch="Fill"/>
            </Grid>
        </Border>
        
        <Button Cursor="Hand" ToolTip ="Forward" Background="White" Width="50" HorizontalAlignment="Right" VerticalAlignment="Center" Height="50" Margin="0,166,28,0" d:LayoutOverrides="Width, Height" Click="navigate_cat">
            <Image Source=".\Images\Navigation\foward_arrow.png" Stretch="Fill"/>
        </Button>


    </Grid>
</Page>
