<Window x:Class="WpfApp1.Checklist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Checklist" Height="900" Width="1600">
    <Grid Background="#FFDADADA">

        <Label x:Name="label" Content="Checklist" HorizontalAlignment="Center" Height="166" Margin="495,0,495.6,0" VerticalAlignment="Top" Width="603" FontSize="85" FontFamily="Segoe Script" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="maroon"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="506" Margin="0,171,-0.4,0" VerticalAlignment="Top" Width="1594">
            <TextBlock x:Name="textBlock1" Height="67" TextWrapping="Wrap" Text="• 15 lb Ground Beef" Width="1574" FontSize="50" FontFamily="Sakkal Majalla" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="textBlock" Height="73" TextWrapping="Wrap" Width="1574" FontSize="50" FontFamily="Sakkal Majalla" TextAlignment="Center"><Run Text="• "/><Run Text="1.75 lb Diced Tomatoes"/></TextBlock>
        </ListBox>
        <Button x:Name="button2" Content="Delete" HorizontalAlignment="Left" Height="112" Margin="38,717,0,0" VerticalAlignment="Top" Width="288" Background="Maroon" Click="button2_Click" FontSize="70" FontFamily="Sakkal Majalla" Foreground="White"/>
        <Button x:Name="button" Content="Clear All" HorizontalAlignment="Left" Height="112" Margin="365,717,0,0" VerticalAlignment="Top" Width="288" Background="Maroon" Click="button2_Click" FontSize="70" FontFamily="Sakkal Majalla" Foreground="White"/>
        <Button x:Name="button1" Content="Print List" HorizontalAlignment="Left" Height="112" Margin="1259,717,0,0" VerticalAlignment="Top" Width="288" Background="White" Click="button2_Click" FontSize="70" FontFamily="Sakkal Majalla" Foreground="Maroon"/>

        <Button x:Name="backbutton"  HorizontalAlignment="Center"  Width="64" VerticalAlignment ="Center" Height="64" VerticalContentAlignment="Center" Margin="38,61,1491.6,745.4">
            <Grid x:Name="backarrow" Height="Auto" Width="Auto">
                <TextBlock Name ="arrow" FontSize = "60" HorizontalAlignment ="Center"  TextWrapping="Wrap" FontWeight="Bold"  Text ="&#x2190;" Height="auto" Margin="1,-19,0.8,-0.2" RenderTransformOrigin="0.678,-0.205"/>
            </Grid>
        </Button>
    </Grid>
</Window>
