<Page x:Class="WpfApp1.Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Recipe" Height="900" Width="1600">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="1360*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Background="#dae1e7" HorizontalAlignment="Left" Height="261" Margin="1,79,0,0" VerticalAlignment="Top" Width="876">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="319*"/>
                <ColumnDefinition Width="557*"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" BorderBrush="Black" Margin="0,0,48,0">
                <Image x:Name="image" Source=".\Images\Recipes\Spaghetti-Chicken-Meatballs.png" HorizontalAlignment="Left" Height="256" VerticalAlignment="Top" Width="256"  Margin="10,10,10,10" />
            </Border>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="170" Margin="288,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="578" FontSize="20"  Text="Spaghetti is an Italian word that literally means little twines. Spaghetti is a very popular form (dare I say the most popular form) of Italian pasta. " Grid.ColumnSpan="2"/>
            <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="271,22,-29,0" TextWrapping="Wrap" Text="Spaghetti" VerticalAlignment="Top" Height="64" Width="634" FontSize="36" TextAlignment="Center" Grid.ColumnSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="241" Margin="10,10,0,0" VerticalAlignment="Top" Width="256"/>
        </Grid>
        <TextBlock x:Name="Ingredients" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Ingredients" VerticalAlignment="Top" Height="50" Width="447" Margin="927,94,0,0" FontSize="36" TextAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Border BorderBrush="#FFABADB3" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="431" Margin="926,149,0,0" VerticalAlignment="Top" Width="448" Grid.ColumnSpan="2"/>
        <Canvas  Background="AliceBlue" Grid.Column="1" HorizontalAlignment="Left" Height="665" Margin="927,149,0,0" VerticalAlignment="Top" Width="447" Grid.ColumnSpan="2">
            <ListBox x:Name="Ingredients_Box" Background="AliceBlue" HorizontalAlignment="Left" Height="665" VerticalAlignment="Top" Width="447" SelectionChanged="listBox_SelectionChanged" RenderTransformOrigin="0.56,0.503" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <Label x:Name="label1" Content="• 1 lb Ground Beef" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label2" Content="• 1 Onion, Chopped" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label3" Content="• 4 cloves garlic, Minced" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label4" Content="• 1 Small Green Bell Pepper, Diced" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label5" Content="• 1.75 lb Diced Tomatoes" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label6" Content="• 1 lb Tomato Sauce" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label7" Content="• 0.375 lb Tomato Paste" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label8" Content="• 2 Teaspoons Dried Basil" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label9" Content="• 1 Teaspoon Salt" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
                <Label x:Name="label10" Content="• 1/2 Teaspoon Black Pepper" Height="42" Width="430" FontSize="24" VerticalContentAlignment="center"/>
            </ListBox>
            <Button x:Name="button" Content="Add to Checklist" Height="53" Canvas.Top="602" Width="199" FontSize="24" Canvas.Left="10"/>
            <Button x:Name="button1" Content="See Alternatives" Height="53" Canvas.Left="246" Canvas.Top="602" Width="191" FontSize="24"/>
        </Canvas>
        <ContentControl Content="" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Grid Grid.Column="1" HorizontalAlignment="Left" Height="448" Margin="1,366,0,0" VerticalAlignment="Top" Width="877">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="855*"/>
                <ColumnDefinition Width="22*"/>
            </Grid.ColumnDefinitions>
            <Expander x:Name="expander" Header="1. Cook pasta al dente" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" IsExpanded="True" FontSize="24" Height="223" Background="AliceBlue" Width="855">
                <Grid Background="#FFE5E5E5" Margin="0,0,-2,0" Height="223">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="34*"/>
                        <ColumnDefinition Width="169*"/>
                        <ColumnDefinition Width="82*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="image1" Source=".\Images\Video\cooking_video_thumbnail.jpg" HorizontalAlignment="Left" Height="164" Margin="456,10,0,0" VerticalAlignment="Top" Width="287" Grid.ColumnSpan="2" Grid.Column="1"/>
                    <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="164" Margin="10,10,0,0" TextWrapping="Wrap" Text="Fill a large pot with water, and add two large pinches of salt.&#xD;&#xA;Bring water to boil.&#xD;&#xA;Add 250g of dried pasta to the boiling water.&#xD;&#xA;Cook for 5-7 minutes or until pasta reaches desired firmness.&#xD;&#xA;Drain the pasta water." VerticalAlignment="Top" Width="534" FontSize="18" TextChanged="textBox1_TextChanged" Grid.ColumnSpan="2"/>
                </Grid>
            </Expander>
            <Expander x:Name="expander1" Header="5. Put meatballs into sauce" HorizontalAlignment="Left" Margin="0,357,0,0" VerticalAlignment="Top" Width="855" FontSize="24" Height="45" Background="AliceBlue">
                <Grid Background="#FFE5E5E5"/>
            </Expander>
            <ScrollViewer HorizontalAlignment="Right" Height="448" VerticalAlignment="Top" Width="17" Grid.Column="1"/>
            <Expander x:Name="expander4" Header="6. Combine and serve" HorizontalAlignment="Left" Margin="0,402,0,0" VerticalAlignment="Top" Width="855" Height="46" FontSize="24" Background="AliceBlue"/>
            <Expander x:Name="expander5" Header="4. Cook sauce" HorizontalAlignment="Left" Margin="0,312,0,0" VerticalAlignment="Top" Width="855" FontSize="24" Height="45" Background="AliceBlue"/>
            <Expander x:Name="expander2" Header="3. Brown meatballs and remove from pan" HorizontalAlignment="Left" Margin="0,266,0,0" VerticalAlignment="Top" Width="855" FontSize="24" Background="AliceBlue" Height="46">
                <Grid Background="#FFE5E5E5"/>
            </Expander>
            <Expander x:Name="expander3" Header="2. Combine meat with spices and form meatballs" HorizontalAlignment="Left" Margin="0,223,0,0" VerticalAlignment="Top" Width="855" FontSize="24" Background="AliceBlue" Height="43"/>
        </Grid>
        <local:Button_CheckList HorizontalAlignment="Left" Height="19" Margin="1283,18.5,0,0" VerticalAlignment="Top" Width="167.5" Grid.ColumnSpan="2" Grid.Column="1"/>



    </Grid>

</Page>
    
